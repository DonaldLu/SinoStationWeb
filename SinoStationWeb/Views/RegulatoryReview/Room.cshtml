@using SinoStationWeb.Models;

@{
    ViewBag.Title = "Room";
}

<div ng-controller="RoomCtrl" class="container" style="margin-top: 60px">

    <form name="myForm">
        <label for="repeatSelect">請選擇規範條件：</label>
        <select name="repeatSelect" id="repeatSelect" ng-model="data.rule" ng-change="GetSQLData(data.rule)">
            <option ng-repeat="rule in data.allRule" value="{{rule.sqlName}}">{{rule.name}}</option>
        </select>
    </form>

    <nav class="navbar navbar-expand-lg navbar-light bg-light schedule-fixed-top">
        <a class="navbar-brand" href="">{{chooseRule}}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" ui-sref="Sheet1">工作表1</a>
                <a class="nav-item nav-link" ui-sref="Sheet2">工作表2</a>
                <a class="nav-item nav-link" ui-sref="Sheet3">工作表3</a>
            </div>
        </div>
    </nav>

    <div ui-view></div>

    <div ng-repeat="x in [].constructor(7) track by $index">
        <br />
    </div>

</div>

@section Scripts {
    <script src="@Url.Versioned("~/Scripts/WebApp/RegulatoryReview/RoomCtrl.js")"></script>
}